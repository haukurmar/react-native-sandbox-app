# Identity Server Configuration
AUTH_AUTHORITY=https://identity.example.com
AUTH_CLIENT_ID=mobile_app
AUTH_REDIRECT_URI=com.example.app:/callback
AUTH_POST_LOGOUT_REDIRECT_URI=com.example.app:/loggedout

# Optional endpoints (can be derived from authority)
AUTH_DISCOVERY_URL=https://identity.example.com/.well-known/openid-configuration
AUTH_TOKEN_ENDPOINT=https://identity.example.com/connect/token
AUTH_END_SESSION_ENDPOINT=https://identity.example.com/connect/endSession

# Scopes
AUTH_SCOPES=openid profile offline_access
